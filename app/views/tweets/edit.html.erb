<div class="contents row">
  <%= form_tag("/tweets/#{@tweet.id}", method: :patch) do %>
    <h3>
      編集する
    </h3>
    <input placeholder="編集後の画像のURL" type="text" name="image" value=<%= @tweet.image %> >
    <textarea cols="30" name="text" placeholder="編集後の本文" rows="10"><%= @tweet.text %></textarea>
    <input type="submit" value="編集する">
  <% end %>
</div>